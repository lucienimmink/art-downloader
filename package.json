{
  "name": "@addasoft/art-downloader",
  "version": "1.2.0",
  "description": "download artist and album art based on the MBID",
  "main": "index.js",
  "files": [
    "index.js",
    "modules"
  ],
  "type": "module",
  "scripts": {
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "npm run lint:prettier",
    "format": "npm run format:prettier",
    "dev": "node index.js",
    "start": "node index.js",
    "postversion": "git push && git push --tags",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucienimmink/art-downloader.git"
  },
  "author": "lucien immink",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lucienimmink/art-downloader/issues"
  },
  "homepage": "https://github.com/lucienimmink/art-downloader#readme",
  "dependencies": {
    "dotenv": "^16.0.0",
    "kleur": "^4.1.4",
    "node-fetch": "^3.1.0",
    "ora": "^6.0.1",
    "read-pkg": "^7.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "npm run format"
    ]
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.6.2"
  }
}
